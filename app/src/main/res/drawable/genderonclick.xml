<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="-3dp"
        android:left="-3dp"
        android:right="-3dp"
        android:bottom="2dp">
        <selector >
            <item android:state_enabled="true"
                android:state_focused="true">
                <shape
                    android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="#FF51ACB4"/>
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape
                    android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="#ef0a0a"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>