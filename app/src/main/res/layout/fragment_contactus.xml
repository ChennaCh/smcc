                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape_data"
                    android:padding="5dp"
                    android:text="admissions@smec.ac.in"
                    android:textColor="#000" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape_data"
                    android:padding="5dp"
                    android:text="8008333876"
                    android:textColor="#000" />
            </TableRow>
            <TableRow
                android:id="@+id/table_data2"
