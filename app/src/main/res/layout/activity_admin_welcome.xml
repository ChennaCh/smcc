<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.smcc.application.AdminWelcome">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/adminvpager"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true" />
            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/adminindicator"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/adminvpager"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/adminscrollText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#e53c38"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:lines="1"
        android:textColor="#fff"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:padding="4dp"
        android:scrollHorizontally="true"
        android:text="Welcome To SMEC and get the latest updates about College" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e53c38"
        android:layout_weight="3"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/addFaculty"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/roung_bgbtn"
                android:drawablePadding="5dp"
                android:text="Add       Faculty"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="13dp" />

            <Button
                android:id="@+id/changepwd"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/roung_bgbtn"
                android:drawablePadding="5dp"
                android:text="Change Password"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/viewFaculty"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/roung_bgbtn"
                android:drawablePadding="5dp"
                android:text="View      Faculty"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="13dp" />

            <Button
                android:id="@+id/adminfeedback"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/roung_bgbtn"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:drawablePadding="5dp"
                android:text="View   Feedback"
                android:textColor="#fff"
                android:textSize="13dp"
                android:textAllCaps="false"
                android:textAlignment="center"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/postNews"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/roung_bgbtn"
                android:drawablePadding="5dp"
                android:text="Post           News"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="13dp" />

            <Button
                android:id="@+id/admin_logout"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/roung_bgbtn"
                android:drawablePadding="5dp"
                android:text="Logout"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="13dp" />
        </LinearLayout>

        </LinearLayout>
</LinearLayout>
