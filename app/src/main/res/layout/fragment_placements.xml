<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll"
        android:layout_height="match_parent"
        android:background="?android:windowBackground"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view"
            android:layout_gravity="center">
            <RelativeLayout
                android:id="@+id/rplcmthome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/plcmthome"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/placementshome"
                    android:alpha="0.5"
                    app:layout_collapseMode="parallax" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="27dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="50dp"
                        android:background="#ac1c1c"
                        android:text="Placements Home"
                        android:textColor="#fff"
                        android:textSize="15dp" />

                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardview2"
            android:layout_gravity="center">
            <RelativeLayout
                android:id="@+id/rcampus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/campus"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/compus"
                    android:alpha="0.5"
                    app:layout_collapseMode="parallax" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="27dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="50dp"
                        android:background="#ac1c1c"
                        android:text="Campus Selections"
                        android:textColor="#fff"
                        android:textSize="15dp" />

                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view4"
            android:layout_gravity="center">
            <RelativeLayout
                android:id="@+id/rcmpnyvisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cmpnyvisit"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/edu"
                    android:alpha="0.5"
                    app:layout_collapseMode="parallax" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="27dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="50dp"
                        android:background="#ac1c1c"
                        android:text="Companies Visited"
                        android:textColor="#fff"
                        android:textSize="15dp" />

                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view5"
            android:layout_gravity="center">
            <RelativeLayout
                android:id="@+id/rcontactus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/contactus"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/block"
                    android:alpha="0.5"
                    app:layout_collapseMode="parallax" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="27dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="50dp"
                        android:background="#ac1c1c"
                        android:text="Contact Us"
                        android:textColor="#fff"
                        android:textSize="15dp" />

                </LinearLayout>
            </RelativeLayout>
</android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
