<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newsbg"
    android:orientation="vertical"
    tools:context="com.smcc.application.Activity.GuestFeedback">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:padding="20dp"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/guest_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:layout_marginTop="100dp"
                android:backgroundTint="@color/black"
                android:drawablePadding="5dp"
                android:textColorHint="@color/gray_color"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"/>
            <EditText
                android:id="@+id/guest_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile"
                android:inputType="number"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:drawablePadding="5dp"
                android:textColorHint="@color/gray_color"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"/>

            <EditText
                android:id="@+id/guest_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:drawablePadding="5dp"
                android:textColorHint="@color/gray_color"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"/>

            <Spinner
                android:id="@+id/feedback_spinner"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/guest_data"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Write FeedBack"
                android:textAlignment="center"
                android:background="@drawable/postnewsbg"
                android:inputType="text"
                android:layout_marginTop="5dp"
                android:drawablePadding="5dp"
                android:textColorHint="@color/gray_color"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"/>

            <Button
                android:id="@+id/feedback_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/blue"
                android:textColor="@color/black"
                android:text="Feedback"
                android:layout_marginTop="10dp"
                android:textAllCaps="true"/>

        </LinearLayout>

        <TextView
            android:id="@+id/feedback_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/button_dark_red"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_below="@+id/feedback_result"
            android:src="@drawable/viewfeedback"/>
    </RelativeLayout>
    </ScrollView>

</LinearLayout>
